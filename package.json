{
  "name": "linear-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for the Linear API.",
  "type": "module",
  "bin": {
    "linear-mcp-server": "build/src/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/src/index.js', '755')\"",
    "prepare": "pnpm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/src/index.js",
    "lint": "eslint --ext .ts src/"
  },
  "dependencies": {
    "@linear/sdk": "^38.0.0",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.11",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/modelcontextprotocol/linear-server.git"
  },
  "keywords": [
    "linear",
    "mcp",
    "model context protocol",
    "api",
    "server"
  ],
  "author": "Model Context Protocol",
  "license": "MIT"
}
